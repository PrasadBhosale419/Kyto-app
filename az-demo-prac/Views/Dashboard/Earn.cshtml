@model IEnumerable<az_demo_prac.Models.Earn>

@{
    ViewData["Title"] = "Earn";
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
    <h1 class="mb-0">Earn</h1>

    <div class="d-flex flex-wrap gap-2">
        <form class="d-flex" method="get" action="@Url.Action("Search", "Dashboard")">
            <input class="form-control me-2" type="search" name="query" placeholder="Task" aria-label="Search">
            <input class="form-control me-2" type="search" name="query" placeholder="Location" aria-label="Search">
            <input class="form-control me-2" type="search" name="query" placeholder="Price" aria-label="Search">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Task</th>
                <th>Details</th>
                <th>FlatNo/Floor/Wing</th>
                <th>Addressline1</th>
                <th>Addressline2</th>
                <th>State</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.taskName)</td>
                    <td>@Html.DisplayFor(modelItem => item.taskDetails)</td>
                    <td>@Html.DisplayFor(modelItem => item.flatNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.addressline1)</td>
                    <td>@Html.DisplayFor(modelItem => item.addressline2)</td>
                    <td>@Html.DisplayFor(modelItem => item.state)</td>
                    <td>@Html.DisplayFor(modelItem => item.country)</td>
                    <td>
                        <a asp-action="GetDetails" asp-route-id="@item.id" class="btn btn-sm btn-info me-1">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
