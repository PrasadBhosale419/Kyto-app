@model az_demo_prac.Models.Earn

@{
    ViewData["Title"] = "Spend";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: #f9fafa;
        font-family: 'Segoe UI', sans-serif;
    }

    h3 {
        color: #0d1b2a;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-container {
        background-color: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    label {
        font-weight: 500;
        color: #0d1b2a;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #d0d7de;
    }

    .btn-primary {
        background-color: #00bfa6;
        border-color: #00bfa6;
        border-radius: 8px;
        padding: 10px 18px;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #009e8a;
            border-color: #009e8a;
        }

    .broom-icon {
        position: absolute;
        bottom: 10px;
        right: 10px;
        font-size: 22px;
        color: #00bfa6;
    }
</style>

<div class="container mt-4 position-relative">
    <h3><i class="fa-solid fa-broom"></i> Add your task</h3>
    <hr />
    <div class="row">
        <div class="col-md-6 form-container">
            <form asp-action="AddTask">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="taskName">Task</label>
                    <input asp-for="taskName" class="form-control" />
                    <span asp-validation-for="taskName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="userId">User ID</label>
                    <input asp-for="userId" class="form-control" />
                    <span asp-validation-for="userId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="taskDetails">Task Details</label>
                    <input asp-for="taskDetails" class="form-control" />
                    <span asp-validation-for="taskDetails" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="flatNo">Flat No./Floor/Wing</label>
                    <input asp-for="flatNo" class="form-control" />
                    <span asp-validation-for="flatNo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="addressline1">Address Line 1</label>
                    <input asp-for="addressline1" class="form-control" />
                    <span asp-validation-for="addressline1" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="addressline2">Address Line 2</label>
                    <input asp-for="addressline2" class="form-control" />
                    <span asp-validation-for="addressline2" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="state">State</label>
                    <input asp-for="state" class="form-control" />
                    <span asp-validation-for="state" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="country">Country</label>
                    <input asp-for="country" class="form-control" />
                    <span asp-validation-for="country" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-plus"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="broom-icon">
        <i class="fa-solid fa-broom"></i>
    </div>
</div>
