@model az_demo_prac.Models.TaskDetailsViewModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="fw-bold mb-0" style="color: #00b6b3;">Task Details</h2>
        <a asp-action="Earn" class="btn btn-outline-secondary rounded-pill px-4">Back to List</a>
    </div>

    <div class="row g-4">
        <!-- Task Details Card -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0" style="background: #f9f9f9; border-radius: 15px;">
                <div class="card-body p-4">
                    <h4 class="mb-3 text-secondary">
                        <i class="fas fa-tasks me-2"></i> Task Information
                    </h4>
                    <hr class="text-secondary" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted">Task</label>
                            <p class="fw-semibold">@Model.EarnTask.TaskName</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted">Price</label>
                            <p class="fw-semibold">@Model.EarnTask.Price</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted">Details</label>
                            <p class="fw-semibold">@Model.EarnTask.TaskDetails</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted">Flat No</label>
                            <p class="fw-semibold">@Model.EarnTask.FlatNo</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.EarnTask.Addressline1))
                        {
                            <div class="col-md-6">
                                <label class="text-muted">Address Line 1</label>
                                <p class="fw-semibold">@Model.EarnTask.Addressline1</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.EarnTask.Addressline2))
                        {
                            <div class="col-md-6">
                                <label class="text-muted">Address Line 2</label>
                                <p class="fw-semibold">@Model.EarnTask.Addressline2</p>
                            </div>
                        }

                        <div class="col-md-6">
                            <label class="text-muted">State</label>
                            <p class="fw-semibold">@Model.EarnTask.State</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted">Country</label>
                            <p class="fw-semibold">@Model.EarnTask.Country</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Details Card -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0" style="background: #ffffff; border-radius: 15px;">
                <div class="card-body text-center p-4">
                    <img src="https://via.placeholder.com/100" class="rounded-circle shadow-sm mb-3" alt="User Profile" />
                    <h5 class="fw-bold mb-1 text-dark">@Model.Postedby</h5>
                    <span class="badge rounded-pill bg-secondary text-white">Task Poster</span>

                    <div class="text-start mt-4">
                        <p class="mb-2">
                            <i class="fas fa-phone-alt me-2 text-secondary"></i> <span class="fw-semibold">@Model.Phone</span>
                        </p>
                        <p class="mb-2">
                            <i class="fas fa-envelope me-2 text-secondary"></i> <span class="fw-semibold">@Model.Email</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
