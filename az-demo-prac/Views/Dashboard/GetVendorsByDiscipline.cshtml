@model IEnumerable<az_demo_prac.Models.Vendor>

@{
    ViewData["Title"] = "Vendors";
}

<div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
    <h1 class="mb-0">Vendors</h1>

    <div class="d-flex flex-wrap gap-2">
        <form class="d-flex" method="get" action="@Url.Action("SearchVendors", "Dashboard")">
            <input class="form-control me-2" type="search" name="task" placeholder="Task Discipline" aria-label="Task">
            <input class="form-control me-2" type="search" name="location" placeholder="Location" aria-label="Location">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Task Discipline</th>
                <th>Description</th>
                <th>User ID</th>
                <th>Address Line 1</th>
                <th>Address Line 2</th>
                <th>City</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.TaskDiscipline)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => item.AddressLine1)</td>
                    <td>@Html.DisplayFor(modelItem => item.AddressLine2)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
