<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kyto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/az_demo_prac.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --kyto-primary: #00b6b3;
            --kyto-dark: #1a2b49;
            --kyto-accent: #fdbd2d;
            --kyto-light-bg: #f8fafa;
            --kyto-gray: #e0e0e0;
        }

        body {
            background-color: var(--kyto-light-bg);
            color: var(--kyto-dark);
            font-family: 'Poppins', sans-serif;
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
        }

        main {
            flex: 1;
            padding-top: 80px;
            padding-bottom: 50px;
        }

        footer {
            background-color: #ffffff;
            border-top: 1px solid var(--kyto-gray);
            color: var(--kyto-dark);
            text-align: center;
            padding: 20px 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .navbar {
            background-color: #ffffff;
            border-bottom: 2px solid var(--kyto-gray);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            padding: 10px 0;
        }

        .navbar-brand {
            color: var(--kyto-primary);
            font-weight: bold;
            font-size: 1.5rem;
        }

            .navbar-brand:hover {
                color: var(--kyto-dark);
            }

        .nav-link {
            color: var(--kyto-dark);
        }

            .nav-link:hover {
                color: var(--kyto-primary);
            }

        .btn-danger {
            background-color: var(--kyto-primary);
            border-color: var(--kyto-primary);
        }

            .btn-danger:hover {
                background-color: var(--kyto-dark);
                border-color: var(--kyto-dark);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Dashboard" asp-action="ReturnDashboard">
                    KYTO
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Earn">
                                <i class="fas fa-coins"></i> Earn
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Spend">
                                <i class="fas fa-credit-card"></i> Spend
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Vendors">
                                <i class="fa-solid fa-shop"></i> Vendors
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle fa-lg me-1"></i> Profile
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">View Profile</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="RegisterAsVendor">Be a vendor</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link dropdown-item">
                                            <i class="fas fa-sign-out-alt"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - KYTO - <a asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fas fa-shield-alt"></i> Privacy
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
